{
  "apps": [{
    "name": "node.mainnet-snapshot",
    "script": "./dist/app.js",
    "cwd": "./src",
    "pid_file": "../pids/node.mainnet-snapshot.pid",
    "out_file": "../logs/node.mainnet-snapshot.log",
    "error_file": "../logs/node.mainnet-snapshot.err",
    "log_date_format": "YYYY-MM-DD HH:mm:ss SSS",
    "watch": false,
    "kill_timeout" : 20000,
    "autorestart": false,
    "max_memory_restart": "1024M",
    "node_args": "--max_old_space_size=1024",
    "args": "-n mainnet -s -o '$.db.database=rise_db_snap'",
    "min_uptime": 3000,
    "max_restarts": 10
  }]
}